---
interface Props {
    title: string;
    subTitle: string;
    body: string;
    href: string;
}

const { title, subTitle, body, href } = Astro.props;
---

<a href={href} <div class="card">
    <div class="card-body">
        <h5 class="card-title">{title}</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">{subTitle}</h6>
        <p class="card-text">
            {body}
        </p>
    </div>
</a>

<style>
    .card {
        padding: 10px;
        margin: 10px;
        border: none;
    }
    .card-body {
        padding: 0.5rem 0.5rem;
    }
    a {
        text-decoration: none;
        color: inherit;
    }
    a:hover {
        color: var(--bs-secondary-color);
    }
</style>
